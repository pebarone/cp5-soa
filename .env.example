# Configuração do Banco de Dados Oracle
# Substitua com suas credenciais reais
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_URL=localhost:1521/ORCL

# Para Oracle Cloud Autonomous Database use o formato:
# DB_URL=(description=(retry_count=20)(retry_delay=3)(address=(protocol=tcps)(port=1522)(host=seu-host.oraclecloud.com))(connect_data=(service_name=seu_servico_high.adb.oraclecloud.com))(security=(ssl_server_dn_match=yes)))

# Porta da aplicação (opcional)
PORT=3000

# Ambiente Node.js (opcional)
NODE_ENV=production

# Seed automático ao iniciar o container (opcional)
# true = popula banco com dados de exemplo (10 hóspedes, 10 quartos, 10 reservas)
# false = não executa seed
AUTO_SEED=false
